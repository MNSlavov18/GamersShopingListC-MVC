@{
}

@model GamersShopingListC_MVC.Models.Entities.Game

<h1>Edit Game</h1>

@if (Model is null)
    {
    <p>No game was found with this Id</p>
    }

else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="from-control" asp-for="Id" readonly/>
        </div>


        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="from-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Value $</label>
            <input type="number" class="from-control" asp-for="Value" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}