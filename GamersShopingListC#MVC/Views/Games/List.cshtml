@{
}

@model List<GamersShopingListC_MVC.Models.Entities.Game>

<h1>Games</h1>
<table class="table">
       <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>Value $</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var game in Model)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Value</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Games" asp-action="Edit" asp-route-id="@game.Id">Edit</a>
                </td>
            </tr>
        }
       </tbody>
</table>
